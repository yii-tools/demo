{
    "name": "yii-tools/app",
    "type": "project",
    "description": "Application Template for YiiFramework v. 3.0.",
    "keywords": [
        "yii-tools",
        "application",
        "template",
        "yii3"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "ext-intl": "*",
        "httpsoft/http-message": "^1.0.5",
        "psr/container": "^2.0",
        "psr/http-message": "^1.0",
        "psr/http-server-handler": "^1.0",
        "symfony/console": "^6.0",
        "vlucas/phpdotenv": "^5.3",
        "yii-tools/html": "^1.0@dev",
        "yii-tools/service": "^1.0@dev",
        "yiisoft/aliases": "^2.0|^3.0",
        "yiisoft/arrays": "^3.0",
        "yiisoft/assets": "^4.0",
        "yiisoft/cache": "^3.0",
        "yiisoft/cache-file": "^3.0",
        "yiisoft/config": "^1.3",
        "yiisoft/csrf": "^2.0",
        "yiisoft/data-response": "^2.0",
        "yiisoft/definitions": "^3.2",
        "yiisoft/di": "^1.2",
        "yiisoft/error-handler": "^3.0",
        "yiisoft/factory": "^1.1",
        "yiisoft/files": "^2.0",
        "yiisoft/http": "^1.2",
        "yiisoft/i18n": "^1.1",
        "yiisoft/log": "^2.0",
        "yiisoft/log-target-file": "^3.0",
        "yiisoft/router": "^3.0",
        "yiisoft/router-fastroute": "^3.0",
        "yiisoft/translator": "^3.0",
        "yiisoft/translator-message-php": "^1.1",
        "yiisoft/view": "^8.0",
        "yiisoft/yii-console": "^2.0",
        "yiisoft/yii-event": "^2.0",
        "yiisoft/yii-http": "^1.0",
        "yiisoft/yii-middleware": "dev-master",
        "yiisoft/yii-runner-console": "^2.0",
        "yiisoft/yii-runner-http": "^2.0",
        "yiisoft/yii-view": "^6.0"
    },
    "require-dev": {
        "codeception/c3": "^2.7",
        "codeception/codeception": "^5.0",
        "codeception/module-asserts": "^3.0",
        "codeception/module-cli": "^2.0",
        "codeception/module-phpbrowser": "^3.0",
        "maglnet/composer-require-checker": "^4.2",
        "phpunit/phpunit": "^10.0",
        "rector/rector": "^0.15.2",
        "roave/infection-static-analysis-plugin": "^1.25",
        "vimeo/psalm": "^4.30|^5.4",
        "yii-tools/contact-form": "1.0.x-dev"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "yiisoft/config": true,
            "infection/extension-installer": true,
            "codeception/c3": true,
            "foxy/foxy": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        },
        "config-plugin-file": "di-container.php"
    },
    "scripts": {
        "post-create-project-cmd": [
            "App\\Installer::copyEnvFile"
        ],
        "post-update-cmd": [
            "App\\Installer::postUpdate",
            "App\\Installer::copyEnvFile"
        ],
        "check-dependencies": "composer-require-checker",
        "psalm": "psalm",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "./yii serve"
        ],
        "test": "codecept run"
    }
}
